  <!-- Reset Test Switch -->
  <animation>
    <type>knob</type>
    <object-name>resettestswitch</object-name>
    <property>controls/switches/cautionresettest</property>
    <center>
      <x-m> -0.037 </x-m>
      <y-m> -0.050 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <factor>-30</factor>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/switches/cautionresettest</property>
        <!--        <step>1</step> -->
        <min>-1</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/click</property>
      </binding>
    </action>
    <increase>
      <binding>
        <command>nasal</command>
        <script>
          setprop( "controls/switches/cautionresettest", 1 );
          settimer( func{ uh1.switch_warns( "true" ) }, 1.0 );
          settimer( func{ uh1.switch_warns( "false" );
          setprop( "controls/switches/cautionresettest", 0 );
          }, 3.5 );
        </script>
      </binding>
    </increase>
    <decrease>
      <binding>
        <command>nasal</command>
        <script>
          setprop( "controls/switches/cautionresettest", -1 );
          uh1.switch_warns( "true" );
          settimer( func{ uh1.switch_warns( "false" );
          setprop( "controls/switches/cautionresettest", 0 );
          }, 2.0 );
        </script>
      </binding>
    </decrease>
  </animation>

