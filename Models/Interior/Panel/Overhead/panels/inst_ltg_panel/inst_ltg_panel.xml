    <object-name>potisec</object-name>
    <property>controls/lighting/instltg/sec</property>
    <center>
      <x-m>  0.00047 </x-m>
      <y-m> -0.03708 </y-m>
      <z-m>  0.00001 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
