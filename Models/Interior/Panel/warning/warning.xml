<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>warning.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>Mstr.Warning</object-name>
    <object-name>Mstr.Caution</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Mstr.Warning</object-name>
    <object-name>Mstr.Caution</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   2 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

   <animation>
    <type>material</type>
    <object-name>Mstr.Warning</object-name>
    <object-name>Mstr.Caution</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0 </red>
      <green> 2 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Mstr.Caution</object-name>
    <condition>
      <property>instrumentation/annunciators/master-caution</property>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Mstr.Warning</object-name>
    <condition>
      <property>instrumentation/annunciators/master-warning</property>
    </condition>
  </animation>
  
</PropertyList>
