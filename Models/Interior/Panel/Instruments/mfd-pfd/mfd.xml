  <!-- Zoom -/+ -->  
  <animation>
    <type>knob</type>
    <drag-direction>horizontal</drag-direction>
    <object-name>ZOOM.btn</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nd/range</property>
        <factor> 1 </factor>
        <min>0</min>
        <max>300</max>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>ZOOM.btn</object-name>
    <property>instrumentation/nd/range</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind> 300 </ind><dep> 360 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00000 </x-m>
      <y-m>  0.06926 </y-m>
      <z-m> -0.09517 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
