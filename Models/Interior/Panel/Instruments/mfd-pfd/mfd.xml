  <!-- Map Mode ON/Off for the moment by clic on glass -->  
  <animation>
    <type>pick</type>
    <object-name>MAP.btn</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/primus2000/dc840/mfd-map</property>
      </binding>
    </action>
  </animation>
  
  <!-- NAV Dist -->
