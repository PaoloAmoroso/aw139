  </animation>
  
  <!-- BUGHDG -->
  <animation>
    <type>textranslate</type>
    <object-name>Hdg</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>0.001</factor>
    <step>100</step>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>Hdg1</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>textranslate</type>
    <object-name>Hdg2</object-name>
    <property>orientation/heading-magnetic-deg</property>
