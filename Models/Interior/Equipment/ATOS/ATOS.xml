<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>ATOS.ac</path>
  
  <animation>
    <object-name>ATOS</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>manche</object-name>
    <object-name>ButtonA1</object-name>
    <object-name>ButtonA2</object-name>
    <object-name>ButtonA3</object-name>
    <object-name>ButtonA4</object-name>
    <object-name>ButtonB1</object-name>
    <object-name>ButtonB2</object-name>
    <object-name>ButtonB3</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- Attitude, Altimeter and Speed Indicator -->
  <model>
    <name>AI</name>
    <path>ai/ai.xml</path>
    <offsets>
      <x-m>  0.194740 </x-m>
      <y-m> -0.028565 </y-m>
      <z-m>  0.190500 </z-m>
      <pitch-deg> 31 </pitch-deg>
    </offsets>
  </model>

  <text>
    <name>APT</name>
    <font>lcd.txf</font>
    <character-size type="double">0.01</character-size>
    <offsets>
      <x-m> 0.213 </x-m>
      <y-m> 0.262 </y-m>
      <z-m> 0.219 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type>string</type>
    <truncate type="bool">false</truncate>
    <property>sim/airport/closest-airport-id</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>ALT</name>
    <font>lucida.txf</font>
    <character-size type="double">0.009</character-size>
    <offsets>
      <x-m>  0.173410 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.150000 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">ALT: %1.0lf ft</format> 
    <truncate type="bool">false</truncate>
    <property>position/altitude-ft</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>AGL</name>
    <font>lucida.txf</font>
    <character-size type="double">0.009</character-size>
    <offsets>
      <x-m>  0.168670 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.141980 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">AGL: %1.0lf ft</format> 
    <truncate type="bool">false</truncate>
    <property>position/altitude-agl-ft</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>SPD</name>
    <font>lucida.txf</font>
    <character-size type="double">0.009</character-size>
    <offsets>
      <x-m>  0.168670 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.133960 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">SPD: %1.0lf kt</format>
    <truncate type="bool">false</truncate>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>GS</name>
    <font>lucida.txf</font>
    <character-size type="double">0.009</character-size>
    <offsets>
      <x-m>  0.168670 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.125940 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">GS: %1.0lf kt</format>
    <truncate type="bool">false</truncate>
    <property>velocities/groundspeed-kt</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>LAT</name>
    <font>lucida.txf</font>
    <character-size type="double">0.008</character-size>
    <offsets>
      <x-m>  0.108900 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.042683 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">LAT: %3.5f</format>
    <truncate type="bool">false</truncate>
    <property>instrumentation/gps/indicated-latitude-deg</property>
    <alignment>left-center</alignment>
  </text>

  <text>
    <name>LON</name>
    <font>lucida.txf</font>
    <character-size type="double">0.008</character-size>
    <offsets>
      <x-m>  0.103510 </x-m>
      <y-m> -0.058542 </y-m>
      <z-m>  0.034663 </z-m>
      <pitch-deg>31</pitch-deg>
    </offsets>
    <axis-alignment>yz-plane</axis-alignment>
    <type type="string">number-value</type>
    <format type="string">LON: %3.5f</format>
    <truncate type="bool">false</truncate>
    <property>instrumentation/gps/indicated-longitude-deg</property>
    <draw-text type="bool">true</draw-text>
    <alignment>left-center</alignment>
  </text>

  <animation>
    <type>material</type>
    <object-name>ALT</object-name>
    <object-name>AGL</object-name>
    <object-name>SPD</object-name>
    <object-name>GS</object-name>
    <object-name>LAT</object-name>
    <object-name>LON</object-name>
    <object-name>APT</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- Primary Position Map -->
  <animation>
    <type>material</type>
    <object-name>canvasCadre</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- Radar -->
  <model>
    <name>Radar_A</name>
    <path>radar/nd.xml</path>
    <offsets>
      <x-m> 0.16858 </x-m>
      <y-m> 0.10344 </y-m>
      <z-m> 0.15052 </z-m>
      <pitch-deg> 31 </pitch-deg>
    </offsets>
  </model>

  <model>
    <name>List</name>
    <path>radar/Text.xml</path>
    <offsets>
      <x-m>  0.18000 </x-m>
      <y-m> -0.19214 </y-m>
      <z-m>  0.12839 </z-m>
      <pitch-deg> 31 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>material</type>
    <object-name>Radar_A</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- Ground Map/Radar -->
  <model>
    <name>Radar_G</name>
    <path>map/map.xml</path>
    <offsets>
      <x-m>  0.16398 </x-m>
      <y-m> -0.19214 </y-m>
      <z-m>  0.12180 </z-m>
      <pitch-deg> 31 </pitch-deg>
    </offsets>
    <overlay>
      <animation n="100">
        <type>scale</type>
        <property>constants/zero</property>
        <x-offset> 2.554 </x-offset>
        <y-offset> 2.554 </y-offset>
        <z-offset> 2.554 </z-offset>
      </animation>
    </overlay>
  </model>

  <model>
    <name>Radar_S</name>
    <path>SLAR/SLAR.xml</path>
    <offsets>
      <x-m>  0.16453 </x-m>
      <y-m> -0.19214 </y-m>
      <z-m>  0.12839 </z-m>
      <pitch-deg> 31 </pitch-deg>
    </offsets>
  </model>

  <!-- MAP Activation (Turn On/Off) -->
    <animation>
    <type>select</type>
    <object-name>AI</object-name>
    <object-name>ALT</object-name>
    <object-name>AGL</object-name>
    <object-name>SPD</object-name>
    <object-name>GS</object-name>
    <object-name>LAT</object-name>
    <object-name>LON</object-name>
    <object-name>APT</object-name>
    <object-name>canvasCadre</object-name>
    <object-name>Radar_A</object-name>
    <object-name>Radar_G</object-name>
    <object-name>Radar_S</object-name>
    <object-name>List</object-name>
    <condition>
      <property>sim/model/show-map</property>
    </condition>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>manche</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/show-map</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>sim/model/RadarMode</property>
        <value>0</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>manche</object-name>
    <interpolation>
      <entry><ind> 1 </ind><dep> -0.002 </dep></entry>
      <entry><ind> 2 </ind><dep>  0.000 </dep></entry>
      <entry><ind> 3 </ind><dep>  0.000 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- RADAR Informations (Show/Hide) -->
    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>ButtonA1</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/radar/info</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>ButtonA1</object-name>
    <interpolation>
      <entry><ind> 1 </ind><dep> -0.002 </dep></entry>
      <entry><ind> 2 </ind><dep>  0.000 </dep></entry>
      <entry><ind> 3 </ind><dep>  0.000 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Terrain Radar Mode Map/SLAR/List -->

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>ButtonA2</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>sim/model/RadarMode</property>
        <step> 1 </step>
        <min>  0 </min>
        <max>  3 </max>
        <wrap>true</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>ButtonA2</object-name>
    <interpolation>
      <entry><ind> 1 </ind><dep> -0.002 </dep></entry>
      <entry><ind> 2 </ind><dep>  0.000 </dep></entry>
      <entry><ind> 3 </ind><dep>  0.000 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Radar_G</object-name>
    <condition>
      <equals>
        <property>sim/model/RadarMode</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Radar_S</object-name>
    <condition>
      <equals>
        <property>sim/model/RadarMode</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>List</object-name>
    <condition>
      <equals>
        <property>sim/model/RadarMode</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>
   
</PropertyList>
